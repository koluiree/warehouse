@page "/movements"
@inject ApiClient Api

<h1 class="page-title">История перемещений</h1>
<p class="page-subtitle">Журнал складских движений продукции.</p>

<section class="card">
    <div class="toolbar">
        <button @onclick="Load">Обновить</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Дата</th>
                <th>SKU</th>
                <th>Тип</th>
                <th>Кол-во</th>
                <th>Документ</th>
                <th>Комментарий</th>
                <th>Исполнил</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in MovementList)
            {
                <tr>
                    <td>@m.OccurredAt.ToLocalTime()</td>
                    <td>@m.ProductId</td>
                    <td>@m.Type</td>
                    <td>@m.Quantity</td>
                    <td>@m.DocumentNumber</td>
                    <td>@m.Comment</td>
                    <td>@m.PerformedById</td>
                </tr>
            }
        </tbody>
    </table>
</section>

@code {
    private List<StockMovementDto> MovementList { get; set; } = [];

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load() => MovementList = await Api.GetMovementsAsync();
}
